rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function
    function isAuthenticated() {
      return request.auth != null;
    }

    // Public Assets (Read Only for Public, Write for Auth)
    // Organized by folder for clarity
    
    // News feature images
    match /news_covers/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Branding assets (Logo, Banners)
    match /branding/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Product/Property Images
    match /properties/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Landing Page Assets
    match /landing_pages/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // User Uploads (General Fallback)
    match /{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
  }
}